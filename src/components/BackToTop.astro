---
// Back to top button component
---

<button
	id="backToTopBtn"
	class="fixed bottom-8 right-8 p-3 rounded-lg bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition-all opacity-0 invisible pointer-events-none z-50 text-gray-900 dark:text-gray-100"
	title="Back to top"
	aria-label="Scroll back to top"
>
	<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
		<polyline points="18 15 12 9 6 15"></polyline>
	</svg>
</button>

<style>
	#backToTopBtn {
		transition: opacity 0.3s ease, visibility 0.3s ease;
	}

	#backToTopBtn.visible {
		opacity: 1;
		visibility: visible;
		pointer-events: auto;
	}

	#backToTopBtn:hover {
		transform: translateY(-2px);
	}

	#backToTopBtn:active {
		transform: translateY(0);
	}
</style>

<script>
	const backToTopBtn = document.getElementById('backToTopBtn');
	if (backToTopBtn) {
		// Show/hide button based on scroll position
		const toggleBackToTopBtn = () => {
			if (window.scrollY > 300) {
				backToTopBtn.classList.add('visible');
			} else {
				backToTopBtn.classList.remove('visible');
			}
		};

		// Scroll to top when button clicked
		backToTopBtn.addEventListener('click', () => {
			window.scrollTo({
				top: 0,
				behavior: 'smooth'
			});
		});

		// Listen to scroll events
		window.addEventListener('scroll', toggleBackToTopBtn);

		// Initial check
		toggleBackToTopBtn();
	}
</script>
