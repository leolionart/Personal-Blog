---
interface Props {
	title?: string;
	class?: string;
}
const { title, class: className } = Astro.props;
---

<section class:list={["flex flex-col gap-4 print:gap-0", className]}>
	{title && <h3 class="text-xs c-gray-500 dark:c-gray-400 uppercase tracking-widest pb-2 border-b-1 border-gray-200 dark:border-gray-800 print:pb-0 print:text-sm">{title}</h3>}
	<slot />
</section>
