---
import cv from "@cv";

const { name, label, image, location, profiles, phone, email } = cv.basics;
const { city, region } = location;

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn");
const linkedUrl = linkedInfo?.url;
const printInfo = [email, phone, linkedUrl].filter(Boolean).join(" â€¢ ");
---

<div class="flex flex-col-reverse gap-6">
	<div class="flex flex-col gap-1 pr-8 print:gap-0 print:pr-0">
		<h1 class="text-2xl md:text-3xl font-bold dark:c-gray-100 print:text-2xl">{name}</h1>
		<h2 class="text-sm md:text-base c-gray-600 dark:c-gray-400 text-balance print:text-lg">{label}</h2>
		<div class="flex items-center gap-1.5 pt-2 text-xs c-gray-500 dark:c-gray-400">
			<svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
				<circle cx="12" cy="10" r="3"/>
			</svg>
			{city}, {region}
		</div>
		<footer class="print-only text-xs c-gray-600 mt-1">
			{printInfo}
		</footer>
		<footer class="no-print mt-3 flex gap-1 text-sm">
			{email && (
				<div class="relative flex items-center" data-copy-container>
					<div class="copy-notification absolute left-0 hidden" data-copy-notification>
						<div class="-mt-1 flex h-6 -translate-y-full items-center rounded bg-gray-800 dark:bg-gray-200 px-2.5 text-xs c-white dark:c-gray-900">
							Copied!
						</div>
					</div>
					<button
						data-copy-btn
						data-copy-text={email}
						class="inline-flex size-8 items-center justify-center border-1 border-gray-200 dark:border-gray-700 cursor-pointer bg-transparent c-gray-600 dark:c-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 hover:c-gray-900 dark:hover:c-gray-100 active:bg-gray-200 dark:active:bg-gray-700 transition-colors"
						title={`Copy ${email}`}
					>
						<svg class="copy-icon w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<rect width="16" height="13" x="6" y="4" rx="2"/><path d="m22 7-7.1 3.78c-.57.3-1.23.3-1.8 0L6 7"/>
						</svg>
						<svg class="copy-check w-4 h-4 hidden c-green-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M20 6 9 17l-5-5"/>
						</svg>
					</button>
				</div>
			)}
			{phone && (
				<a href={`tel:${phone}`} title={`Call ${name}`} target="_blank" rel="noopener noreferrer"
					class="inline-flex size-8 items-center justify-center border-1 border-gray-200 dark:border-gray-700 c-gray-600 dark:c-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 hover:c-gray-900 dark:hover:c-gray-100 active:bg-gray-200 dark:active:bg-gray-700 transition-colors">
					<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/>
					</svg>
				</a>
			)}
			{profiles.map(({ network, url }) => (
				<a href={url} title={`${name} on ${network}`} target="_blank" rel="noopener noreferrer"
					class="inline-flex size-8 items-center justify-center border-1 border-gray-200 dark:border-gray-700 c-gray-600 dark:c-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 hover:c-gray-900 dark:hover:c-gray-100 active:bg-gray-200 dark:active:bg-gray-700 transition-colors">
					{network === "GitHub" && (
						<svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
						</svg>
					)}
					{network === "LinkedIn" && (
						<svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
					)}
					{network === "X" && (
						<svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
							<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
						</svg>
					)}
				</a>
			))}
		</footer>
	</div>
	<figure class="no-print">
		<img
			class="w-20 h-20 md:w-28 md:h-28 rounded-full border-2 border-gray-200 dark:border-gray-700 object-cover"
			src={image}
			alt={name}
		/>
	</figure>
</div>

<script>
	function initCopyButtons() {
		document.querySelectorAll('[data-copy-btn]').forEach(btn => {
			btn.addEventListener('click', async () => {
				const text = btn.getAttribute('data-copy-text');
				if (!text) return;
				await navigator.clipboard.writeText(text);
				const container = btn.closest('[data-copy-container]');
				const notification = container?.querySelector('[data-copy-notification]');
				const check = btn.querySelector('.copy-check');
				const icon = btn.querySelector('.copy-icon');
				notification?.classList.remove('hidden');
				check?.classList.remove('hidden');
				icon?.classList.add('hidden');
				setTimeout(() => {
					notification?.classList.add('hidden');
					check?.classList.add('hidden');
					icon?.classList.remove('hidden');
				}, 2000);
			});
		});
	}
	initCopyButtons();
	document.addEventListener('astro:after-swap', initCopyButtons);
</script>
