---
import Section from "./Section.astro";
import { fetchPublicRepos } from "../../lib/github";

interface Props {
	class?: string;
}
const { class: className } = Astro.props;

const GITHUB_USERNAME = "leolionart";
const repos = await fetchPublicRepos(GITHUB_USERNAME);

const LANGUAGE_COLORS: Record<string, string> = {
	TypeScript: "#3178c6",
	JavaScript: "#f1e05a",
	Python: "#3572A5",
	Astro: "#ff5a03",
	HTML: "#e34c26",
	CSS: "#563d7c",
	Shell: "#89e051",
	Swift: "#f05138",
	Vue: "#41b883",
	Nix: "#7e7eff",
};
---

<Section title="Projects" class={className}>
	{repos.length === 0 ? (
		<p class="text-xs c-gray-500 dark:c-gray-400 italic">
			Could not load repositories.
		</p>
	) : (
		<div class="grid grid-cols-1 md:grid-cols-2 gap-3">
			{repos.map((repo) => (
				<div class="border-1 border-gray-200 dark:border-gray-700 p-4 flex flex-col gap-2">
					<div class="flex items-center justify-between">
						<div class="flex items-center gap-2">
							<svg class="w-4 h-4 c-gray-400 dark:c-gray-500 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"/>
							</svg>
							<a
								class="text-sm font-semibold c-gray-800 dark:c-gray-200 hover:c-gray-900 dark:hover:c-gray-100 underline underline-offset-3 decoration-dotted"
								href={repo.html_url}
								target="_blank"
								rel="noopener"
							>
								{repo.name}
							</a>
						</div>
						<a
							href={repo.html_url}
							title="View on GitHub"
							target="_blank"
							rel="noopener"
							class="c-gray-400 dark:c-gray-500 hover:c-gray-700 dark:hover:c-gray-300 transition-colors shrink-0"
						>
							<svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
							</svg>
						</a>
					</div>
					<p class="text-xs c-gray-600 dark:c-gray-400 flex-1">{repo.description}</p>
					<div class="flex items-center gap-3 mt-auto">
						{repo.language && (
							<span class="flex items-center gap-1.5 text-xs c-gray-500 dark:c-gray-400">
								<span
									class="w-2.5 h-2.5 rounded-full shrink-0 inline-block"
									style={`background-color: ${LANGUAGE_COLORS[repo.language] ?? "#8b949e"}`}
									aria-hidden="true"
								/>
								{repo.language}
							</span>
						)}
						{repo.stargazers_count > 0 && (
							<span class="flex items-center gap-1 text-xs c-gray-500 dark:c-gray-400">
								<svg class="w-3 h-3" viewBox="0 0 16 16" fill="currentColor">
									<path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.75.75 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.681 6.375a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Z"/>
								</svg>
								{repo.stargazers_count}
							</span>
						)}
					</div>
				</div>
			))}
		</div>
	)}
</Section>
