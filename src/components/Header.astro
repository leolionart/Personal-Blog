---
interface Props {
    gridBg?: boolean;

}
const { gridBg = false } = Astro.props;
---
<header>
    <div class:list={[gridBg ? 'grid-bg' : '', "border-x-1 border-x-gray-200 dark:border-x-gray-800 grid place-content-center text-balance text-center py-8 sm:py-12 md:py-16 lg:py-20 xl:py-24 wrapper mx-auto px-4 sm:px-5 md:py-24 md:px-8 lg:p-12 xl:p-12.5 relative"]}>
        <slot/>
    </div>
</header>
<style>
    header > .grid-bg {
        --opacity: 0.75;
        --gray: rgb(229 231 235 / var(--opacity)); /* gray-200 */
        background-image: linear-gradient(to right, var(--gray) 1px, transparent 1px),
            linear-gradient(to bottom, var(--gray) 1px, transparent 1px);
        background-repeat: repeat;
        background-position: -10px -10px;
        background-size: 20px 20px;
    }
    :global(.dark) header > .grid-bg {
        --gray: rgb(55 65 81 / var(--opacity)); /* gray-700 */
    }
</style>